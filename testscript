/usr/bin/time -f "$TIMEFORMAT" sudo ./mix $ITERATIONS SCHED_FIFO $LIGHT > /dev/null
make testclean
/usr/bin/time -f "$TIMEFORMAT" sudo ./mix $ITERATIONS SCHED_FIFO $LIGHT > /dev/null
make testclean
/usr/bin/time -f "$TIMEFORMAT" sudo ./mix $ITERATIONS SCHED_FIFO $LIGHT > /dev/null
