make testclean

#MIX LIGHT TESTING ------------------------------------------------------------------------------------
echo running mix using SCHED_OTHER with $LIGHT simultaneous processes...
/usr/bin/time -f "$TIMEFORMAT" ./mix $ITERATIONS SCHED_OTHER $LIGHT > /dev/null
make testclean
/usr/bin/time -f "$TIMEFORMAT" ./mix $ITERATIONS SCHED_OTHER $LIGHT > /dev/null
make testclean
/usr/bin/time -f "$TIMEFORMAT" ./mix $ITERATIONS SCHED_OTHER $LIGHT > /dev/null
make testclean

